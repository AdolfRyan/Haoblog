{
  "extends": "./tsconfig.base.json",

  "references": [
    {
      "path": "./packages/admin"
    },
    {
      "path": "./packages/website"
    },
    {
      "path": "./packages/server"
    }
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
